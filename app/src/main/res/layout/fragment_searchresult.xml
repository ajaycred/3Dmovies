<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="movies.a3dmovies.fragment.Searchresult">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton_Search_moviess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="30dp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/magnify" />
    <SearchView
        android:layout_width="match_parent"
        android:background="@drawable/edsearchback"
    android:visibility="gone"
        android:id="@+id/searchresult_sv_searchmovies"
        android:layout_height="wrap_content">
    </SearchView>
    <GridView
        android:padding="10dp"
        android:layout_below="@+id/searchresult_sv_searchmovies"
        android:gravity="center"
        android:numColumns="2"
        android:scrollbars="none"
        android:id="@+id/Main_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:textColor="@color/Mainuse"
        android:textStyle="bold"
        android:drawableTop="@drawable/emoticon_neutral"
        android:layout_margin="30dp"
        android:gravity="center"
        android:id="@+id/searchresult_tv_noresutls"
        android:layout_below="@+id/searchresult_sv_searchmovies"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="No movies found with the name please hit an another trail"
        android:layout_height="wrap_content" />
</RelativeLayout>
